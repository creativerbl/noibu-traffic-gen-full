# --- Core traffic shaping ---
SESSIONS_PER_MINUTE=25
AVG_SESSION_MINUTES=3
MAX_CONCURRENCY=100
GLOBAL_QPS_CAP=6

# Allow checkout (we pause at checkout entry for now)
ALLOW_CHECKOUT=true
CHECKOUT_COMPLETE_RATE=0.3

# --- Site ---
ORIGIN=https://noibu.mybigcommerce.com

# --- Locales & timezones ---
LOCALES=en-US,en-CA,en-GB,fr-CA
TIMEZONES=America/Toronto,America/New_York,America/Vancouver,Europe/London

# --- BigCommerce TEST card ONLY ---
BC_TEST_CARD_NUMBER=4111111111111111
BC_TEST_EXP=12/30
BC_TEST_CVV=123
BC_TEST_NAME=Test User

# --- Flags ---
DEBUG=1
SMOKE=0

# --- Referrers & UTM ---
REFERRER_HEADER_URLS=direct,https://www.google.com/,https://www.bing.com/,https://search.yahoo.com/,https://duckduckgo.com/,https://www.facebook.com/,https://www.instagram.com/,https://www.tiktok.com/,https://www.linkedin.com/,https://www.reddit.com/

REFERRER_SOURCES=direct,google,bing,yahoo,duckduckgo,facebook,instagram,tiktok,linkedin,reddit
REFERRER_WEIGHTS=10,35,5,5,5,15,13,12,5,5

UTM_CAMPAIGN_DEFAULT=trafficgen
UTM_MEDIUM_DEFAULT=paid-social
REFERRER_UTM_MEDIUMS=google:organic,bing:organic,yahoo:organic,duckduckgo:organic

# --- Device mix (used by runner; prefer this over legacy DEVICES) ---
DEVICE_MIX=iphone-safari:15,iphone-chrome:10,android-chrome:20,desktop-chrome:25,desktop-edge:10,desktop-safari:10,desktop-firefox:10

# --- Page readiness & realism ---
PAGE_WAIT_UNTIL=load              # load | domcontentloaded | networkidle
POST_NAV_SETTLE_MIN_MS=2500
POST_NAV_SETTLE_MAX_MS=5000
SCROLL_PROB=0.7
SCROLL_DEPTH_MIN=0.35
SCROLL_DEPTH_MAX=0.9
SCROLL_STEPS_MIN=2
SCROLL_STEPS_MAX=6

# --- Top nav: click-all + hotspot extras ---
NAV_CATEGORY_WEIGHTS=Kitchen:35,Bath:30,Lighting:8,Furniture:7,Bedroom:6,Decor:5,Sale:3,New:3,All:3
NAV_HOTSPOT_NAMES=Kitchen,Bath
NAV_HOTSPOT_EXTRA_CLICK_PROB=Kitchen:0.65,Bath:0.45
NAV_NAVIGATION_PAUSE_MS_MIN=2500
NAV_NAVIGATION_PAUSE_MS_MAX=5000

# --- Coverage pass for heatmap completeness (optional) ---
COVERAGE_RUN_PROB=0.15
COVERAGE_MAX_CLICKS=8
COVERAGE_SELECTOR_ALLOW=.hero a,.promo a,.featured a,.card a,button,.btn
COVERAGE_SELECTOR_BLOCK=[href*="logout"],[href^="mailto:"],[href^="tel:"],[href*="admin"],.social a

# --- Category & PDP behaviors ---
CATEGORY_SORT_PROB=0.30
CATEGORY_FILTER_PROB=0.15

# --- Funnel: 30% add-to-cart; 50% of those start checkout (pause on checkout) ---
FUNNEL_ADD_TO_CART_RATE=0.30
FUNNEL_CHECKOUT_START_RATE=0.50
FUNNEL_MAX_CART_ADDS_PER_SESSION=1
FUNNEL_MAX_CHECKOUT_STARTS_PER_SESSION=1
